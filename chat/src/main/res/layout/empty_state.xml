<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:paddingLeft="@dimen/margin_20_dp"
        android:paddingRight="@dimen/margin_20_dp"
        android:textAlignment="center">

        <ImageView
            android:id="@+id/es_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/es_image" />

        <TextView
            android:id="@+id/es_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/es_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_30_dp"
            android:gravity="center"
            android:text="It's empty for now!"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/large_text_size" />

        <TextView
            android:id="@+id/es_descp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/es_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:gravity="center"
            android:text="Empty for now once you received messages, you can view the list of those chats here."
            android:textColor="@color/black_shade"
            android:textSize="@dimen/normal_text_size" />

        <!--<TextView
            android:id="@+id/es_button"
            android:layout_width="@dimen/width_100_dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/es_descp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20_dp"
            android:background="@drawable/es_button_bg"
            android:padding="@dimen/padding_10_dp"
            android:text="Add Member"
            android:textColor="@color/white" />-->

    </RelativeLayout>

</FrameLayout>