<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fargments.navigation.AboutusFragment">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">



    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/aboutus"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:text="About Us"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="This project is proposed and designed by Asad and Hamza as a final year project for Lahore Garrison University."
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_marginRight="15dp"
        android:textColor="@color/black"/>

    <TextView
        android:text="Contact Us"
        android:textSize="30dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/border2"
        android:paddingLeft="15dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_baseline_mail_24"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:text="DevelopersTeam@hotmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="23dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/ic_baseline_phone_enabled_24"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:text="03064123840"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:paddingLeft="15dp"
            android:textSize="25dp"
            />
    </LinearLayout>
   </LinearLayout>

</FrameLayout>