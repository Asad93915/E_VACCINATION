<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#699e99"
    tools:context=".Fargments.PatientHomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoIn"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/polio_add" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="60dp"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/actionAddNewChild"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/grey_300"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_person_add_alt_1_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#97B336"
                        android:hint="Add New Child"
                        android:textAllCaps="false"
                        android:textColorHint="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="60dp"
                    android:padding="5dp"
                    android:id="@+id/actionViewChild"
                    android:background="@drawable/border"
                    android:backgroundTint="@color/grey_300"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/ic_baseline_details_24" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#97B336"
                        android:hint="View Child's"
                        android:textAllCaps="false"
                        android:textColorHint="@color/black"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="30dp">

              <LinearLayout
                  android:layout_width="120dp"
                  android:layout_height="130dp"
                  android:padding="5dp"
                  android:layout_marginLeft="60dp"
                  android:id="@+id/actionVaccinationSchedule"
                  android:layout_gravity="center"
                  android:background="@drawable/border"
                  android:backgroundTint="@color/grey_300"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_gravity="center"
                      android:background="@drawable/ic_baseline_calendar_today_24" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:backgroundTint="#97B336"
                      android:hint="View Vaccination Schedule"
                      android:textAllCaps="false"
                      android:textColorHint="@color/black"
                      android:textSize="14sp" />
              </LinearLayout>
              <LinearLayout
                  android:layout_width="120dp"
                  android:layout_height="130dp"
                  android:padding="5dp"
                  android:layout_marginLeft="60dp"
                  android:id="@+id/actionVaccinationInfo"
                  android:layout_gravity="center"
                  android:background="@drawable/border"
                  android:backgroundTint="@color/grey_300"
                  android:gravity="center"
                  android:orientation="vertical">

                  <ImageView
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_gravity="center"
                      android:background="@drawable/ic_baseline_information_24" />

                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:backgroundTint="#97B336"
                      android:hint="View Vaccination Information"
                      android:textAllCaps="false"
                      android:textColorHint="@color/black"
                      android:textSize="14sp" />
              </LinearLayout>

          </LinearLayout>






        </LinearLayout>
    </ScrollView>

</LinearLayout>